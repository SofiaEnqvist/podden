<Window x:Class="RssReader.Design.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="300" Width="300">
    <Grid>
        <TextBox Name="tbCategory" HorizontalAlignment="Left" Height="23" Margin="10,49,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button Name="btnAdd"  Content="Add" HorizontalAlignment="Left" Margin="166,49,0,0" VerticalAlignment="Top" Width="75" Click="btnAdd_Click"/>
        <ComboBox Name="CbAllCategory" HorizontalAlignment="Left" Margin="10,106,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="tbNewCategory" HorizontalAlignment="Left" Height="23" Margin="10,133,0,0" TextWrapping="Wrap" Text="New name" VerticalAlignment="Top" Width="120"/>
        <Button Name="btnDelete" Content="Delete" HorizontalAlignment="Left" Margin="166,108,0,0" VerticalAlignment="Top" Width="75" Click="btnDelete_Click"/>
        <Button Name="btnChange" Content="Change" HorizontalAlignment="Left" Margin="166,133,0,0" VerticalAlignment="Top" Width="75" Click="btnChange_Click"/>

    </Grid>
</Window>
